{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es5", "es6", "dom", "es2017.object"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "inlineSourceMap": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "formatCodeOptions": {
    "indentSize": 4,
    "tabSize": 4
  },
  "include": [
    "./src/**/*"
  ],
}